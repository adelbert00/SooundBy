{
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": true,
    "semi": true,
    "arrowParens": "always",
    "plugins": [
        "prettier-plugin-blade",
        "prettier-plugin-tailwindcss",
        "@prettier/plugin-php"
    ],
    "overrides": [
        {
            "files": ["*.php"],
            "options": {
                "phpVersion": "8.2",
                "parser": "php",
                "bracketSpacing": true
            }
        },
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade"
            }
        },
        {
            "files": ["*.vue"],
            "options": {
                "singleAttributePerLine": true
            }
        }
    ]
}
